<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClarkNetWebPortal</title>

    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/semantic-ui/dist/semantic.css" />
        <link rel="stylesheet" href="~/lib/video.js/dist/video-js.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
	<div id="global-side-menu" class="ui vertical inverted sidebar menu left">

	</div>
	<div id="global-main-menu" class="ui fixed inverted main menu">
		<div class="ui container">
			<a class="launch icon item">
				<i class="content icon"></i>
			</a>
			<div class="item">

			</div>
			<div class="right menu">
			</div>
		</div>
	</div>
	@RenderBody()
    <div class="ui grid container">
        <div class="row">
            <div class="column">
                <h1 class="ui header">Clark.Net Status</h1>
            </div>
        </div>
        <div class="ui cards">
            <div class="card">
                <div class="content">hi</div>
            </div>
            <div class="card">
                <div class="content">his</div>
            </div>
        </div>
        <hr />
        <footer>
            <p>Clark-Net Web Portal</p>
        </footer>
    </div>
    <environment names="Development,Staging,Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/semantic-ui/dist/semantic.min.js"></script>
        <script src="~/lib/video.js/dist/video.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
